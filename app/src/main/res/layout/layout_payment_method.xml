<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_fill_with_c3c3c3_stroke_1dp_with_top_corners_10dp"
        android:visibility="gone"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_1"
                android:layout_width="30dp"
                android:layout_height="0dp"
                app:tint="@color/colorPrimary"
                android:src="@drawable/icon_credit_card"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/title_1"
                android:contentDescription="@string/card" />

            <TextView
                android:id="@+id/title_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/card"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/description_1"
                app:layout_constraintStart_toEndOf="@id/icon_1"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/description_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/visa_mastercard_rupay_and_more"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/title_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/title_1"
                app:layout_constraintEnd_toEndOf="@id/title_1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_fill_with_c3c3c3_stroke_1dp"
        android:visibility="gone"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_2"
                android:layout_width="30dp"
                android:layout_height="0dp"
                app:tint="@color/colorPrimary"
                android:src="@drawable/icon_credit_card"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/title_2"
                android:contentDescription="@string/card" />

            <TextView
                android:id="@+id/title_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/card"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/description_2"
                app:layout_constraintStart_toEndOf="@id/icon_2"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/description_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/visa_mastercard_rupay_and_more"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/title_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/title_2"
                app:layout_constraintEnd_toEndOf="@id/title_2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_fill_with_c3c3c3_stroke_1dp_with_bottom_corners_10dp"
        android:visibility="gone"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_3"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                app:tint="@color/colorPrimary"
                android:src="@drawable/icon_credit_card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/title_3"
                android:contentDescription="@string/card" />

            <TextView
                android:id="@+id/title_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/card"
                android:textSize="18sp"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/description_3"
                app:layout_constraintStart_toEndOf="@id/icon_3"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/description_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/visa_mastercard_rupay_and_more"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/title_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/title_3"
                app:layout_constraintEnd_toEndOf="@id/title_3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>